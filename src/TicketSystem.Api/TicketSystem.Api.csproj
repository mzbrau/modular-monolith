<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Fig.Client.SecretProvider.Docker" Version="3.1.1" />
        <PackageReference Include="Fig.Client.SecretProvider.Dpapi" Version="3.1.1" />
        <PackageReference Include="NHibernate" Version="5.6.0" />
        <PackageReference Include="AspNetCore.HealthChecks.UI.Client" Version="9.0.0" />
        <PackageReference Include="Fig.Client" Version="3.1.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\TicketSystem.ServiceDefaults\TicketSystem.ServiceDefaults.csproj" />
        <ProjectReference Include="..\UserModule\TicketSystem.User\TicketSystem.User.csproj"/>
        <ProjectReference Include="..\UserModule\TicketSystem.User.Contracts\TicketSystem.User.Contracts.csproj"/>
        <ProjectReference Include="..\TeamModule\TicketSystem.Team\TicketSystem.Team.csproj"/>
        <ProjectReference Include="..\TeamModule\TicketSystem.Team.Contracts\TicketSystem.Team.Contracts.csproj"/>
        <ProjectReference Include="..\IssueModule\TicketSystem.Issue\TicketSystem.Issue.csproj"/>
        <ProjectReference Include="..\IssueModule\TicketSystem.Issue.Contracts\TicketSystem.Issue.Contracts.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="..\..\docs\*.md" LinkBase="Docs" />
        <EmbeddedResource Include="..\..\docs\img\*.svg" LinkBase="Docs" />
        <EmbeddedResource Include="..\..\docs\img\*.png" LinkBase="Docs" />
    </ItemGroup>

<!-- M2 macs can't use the nuget package as it does not support that processor -->
    <ItemGroup>
        <Reference Include="System.Data.SQLite" Condition="'$(NETCoreSdkRuntimeIdentifier)' == 'osx-arm64'">
            <HintPath>..\..\external\arm64\System.Data.SQLite.dll</HintPath>
        </Reference>
        <PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" Condition="'$(NETCoreSdkRuntimeIdentifier)' != 'osx-arm64'" />
        <None Include="..\..\external\arm64\SQLite.Interop.dll" Condition="'$(NETCoreSdkRuntimeIdentifier)' == 'osx-arm64'">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
