<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="TicketSystem.Issue"
                   namespace="TicketSystem.Issue.Domain">

  <class name="IssueBusinessEntity" table="Issues" lazy="false">
    <id name="Id" column="Id" type="TicketSystem.Issue.Infrastructure.Mappings.IssueIdType, TicketSystem.Issue">
      <generator class="assigned" />
    </id>

    <property name="Title" column="Title" not-null="true" />
    <property name="Description" column="Description" />
    <property name="Status" column="Status" not-null="true" />
    <property name="Priority" column="Priority" not-null="true" />
    <property name="AssignedUserId" column="AssignedUserId" type="TicketSystem.Issue.Infrastructure.Mappings.NullableLongType, TicketSystem.Issue" />
    <property name="AssignedTeamId" column="AssignedTeamId" type="TicketSystem.Issue.Infrastructure.Mappings.NullableLongType, TicketSystem.Issue" />
    <property name="CreatedDate" column="CreatedDate" not-null="true" />
    <property name="DueDate" column="DueDate" />
    <property name="ResolvedDate" column="ResolvedDate" />
    <property name="LastModifiedDate" column="LastModifiedDate" not-null="true" />
  </class>

</hibernate-mapping>
