@page "/teams"
@using TicketSystem.Team.Grpc
@using TicketSystem.Client.Services
@inject TeamGrpcClient TeamClient
@rendermode InteractiveServer

<PageTitle>Teams</PageTitle>

<h1>Teams</h1>

<div class="mb-3">
    <a href="/teams/create" class="btn btn-primary">Create New Team</a>
</div>

@if (_teams == null)
{
    <p><em>Loading...</em></p>
}
else if (_teams.Count == 0)
{
    <p>No teams found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Members</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in _teams)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@(team.Description ?? "-")</td>
                    <td>@team.Members.Count</td>
                    <td>@DateTime.Parse(team.CreatedDate).ToLocalTime().ToString("g")</td>
                    <td>
                        <a href="/teams/@team.Id" class="btn btn-sm btn-outline-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TeamMessage>? _teams;

    protected override async Task OnInitializedAsync()
    {
        _teams = await TeamClient.ListTeamsAsync();
    }
}
