@page "/users/{UserId}"
@using TicketSystem.User.Grpc
@using TicketSystem.Client.Services
@inject UserGrpcClient UserClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>User Details</PageTitle>

@if (_user == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1>@_user.DisplayName</h1>

    <div class="row">
        <div class="col-md-6">
            @if (_isEditing)
            {
                <EditForm Model="@_editModel" OnValidSubmit="HandleUpdate" FormName="EditUserForm">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name</label>
                        <InputText id="firstName" @bind-Value="_editModel.FirstName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name</label>
                        <InputText id="lastName" @bind-Value="_editModel.LastName" class="form-control" />
                    </div>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger">@_errorMessage</div>
                    }

                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                </EditForm>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@_user.Email</dd>

                    <dt class="col-sm-3">First Name</dt>
                    <dd class="col-sm-9">@_user.FirstName</dd>

                    <dt class="col-sm-3">Last Name</dt>
                    <dd class="col-sm-9">@_user.LastName</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (_user.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created</dt>
                    <dd class="col-sm-9">@DateTime.Parse(_user.CreatedDate).ToLocalTime().ToString("g")</dd>
                </dl>

                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="StartEdit">Edit</button>
                    @if (_user.IsActive)
                    {
                        <button class="btn btn-warning" @onclick="HandleDeactivate">Deactivate</button>
                    }
                    <a href="/users" class="btn btn-secondary">Back to List</a>
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    private UserMessage? _user;
    private EditUserModel _editModel = new();
    private bool _isEditing;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUser();
    }

    private async Task LoadUser()
    {
        _user = await UserClient.GetUserAsync(UserId);
        if (_user == null)
        {
            Navigation.NavigateTo("/users");
        }
    }

    private void StartEdit()
    {
        _editModel = new EditUserModel
        {
            FirstName = _user!.FirstName,
            LastName = _user.LastName
        };
        _isEditing = true;
    }

    private void CancelEdit()
    {
        _isEditing = false;
        _errorMessage = null;
    }

    private async Task HandleUpdate()
    {
        _errorMessage = null;

        try
        {
            await UserClient.UpdateUserAsync(UserId, _editModel.FirstName!, _editModel.LastName!);
            await LoadUser();
            _isEditing = false;
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private async Task HandleDeactivate()
    {
        try
        {
            await UserClient.DeactivateUserAsync(UserId);
            await LoadUser();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
    }

    private class EditUserModel
    {
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
    }
}
