<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="TicketSystem.User"
                   namespace="TicketSystem.User.Domain">

  <class name="UserBusinessEntity" table="Users" lazy="false">
    <id name="Id" column="Id" type="Int64">
      <generator class="native" />
    </id>
    
    <property name="Email" column="Email" not-null="true" unique="true" />
    <property name="FirstName" column="FirstName" not-null="true" />
    <property name="LastName" column="LastName" not-null="true" />
    <property name="CreatedDate" column="CreatedDate" not-null="true" />
    <property name="IsActive" column="IsActive" not-null="true" />
  </class>

</hibernate-mapping>
